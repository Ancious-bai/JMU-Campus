<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xueyu.post.mapper.VoteOptionMapper">

	<update id="addVoteOptionNum" parameterType="com.xueyu.post.pojo.domain.VoteOption">
		update vote_option
		set num = num + 1 where option_id = #{optionId}
	</update>

</mapper>